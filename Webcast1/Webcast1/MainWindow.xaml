<Window x:Class="Webcast1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Webcast1"
        mc:Ignorable="d"
        Title="Todo" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Now Todo" VerticalAlignment="Center" Margin="10"></Label>
            <TextBox Width="150" VerticalAlignment="Center" Margin="10" Height="30"></TextBox>
            <Button Content="Add" VerticalAlignment="Center" Height="35" Width="70" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <DataGrid Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></DataGrid>
                              
                              
                             
        </StackPanel>






    </Grid>
</Window>
